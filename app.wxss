/**app.wxss**/
@import "./assets/wxss/iconfont.wxss";
.container {
  height: 100%;
  /* display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0; */
  box-sizing: border-box;
  /* padding: 30rpx; */
  min-height: 100vh;
}
.flex-row {
  display: flex;
}
.flex-col {
  display: flex;
  flex-flow: column;
} 
.arrow-bottom {
  font-size: 0;
  line-height: 0;
  border-width: 14rpx;
  border-color: #1a1a1a;
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
  margin-left: 15rpx;
  margin-top: 15rpx
}
.arrow-bottom- {
  font-size: 0;
  line-height: 0;
  border-width: 14rpx;
  /* border-color: #1a1a1a; */
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
  margin-left: 15rpx;
  margin-top: 15rpx
}
.arrow-bottom-10 {
  font-size: 0;
  line-height: 0;
  border-width: 10rpx;
  /* border-color: #1a1a1a; */
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
  margin-left: 12rpx;
  margin-top: 12rpx
}
.label {
  padding: 10rpx 20rpx 5rpx 20rpx;
  border-radius: 10rpx; 
}
.theme-color {
  color: #34C3CB!important;
}
.loading-wrapper {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}
.official {
  position: fixed;
  left: 30rpx;
  bottom: 60rpx;
  width: calc(100% - 60rpx);
  z-index: 2000;
}

/* pages/search/search.wxss */
.top {
  position: fixed;
  top: 0;
  left: 0;
  padding: 30rpx;
  /* margin-bottom: 50rpx; */
  width: calc(100% - 60rpx);
  background: #fff;
  z-index: 1000;
}
.search {
  flex-grow: 1;
  align-items: center;
  width: auto;
  height: 74rpx;
  padding-left: 30rpx;
  background: #EBF0F2;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #999;
}
.search input {
  margin-left: 14rpx;
  width: 100%;
}
.search-btn {
  padding-left: 30rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #1a1a1a;
}

/* 历史记录 */
.list {
  margin-top: 80rpx;
  padding: 0 30rpx;
}
.title {
  justify-content: space-between;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #1A1A1A;
}
.list-content {
  flex-wrap: wrap;
}
.item {
  padding: 0 30rpx;
  margin-right: 24rpx;
  margin-bottom: 30rpx;
  background: #F2F3F3;
  border-radius: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #1A1A1A;
}

.item- {
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #eee;
  font-size: 26rpx; 
}

/* pages/school_search/school_search.wxss */

.top {
  position: fixed;
  top: 0;
  left: 0;
  padding: 30rpx;
  /* margin-bottom: 50rpx; */
  width: calc(100% - 60rpx);
  background: #fff;
  z-index: 1000;
}

/* .top-address {
  font-size: 34rpx;

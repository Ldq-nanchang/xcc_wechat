/* pages/feedback/feedback.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}
.form {
  padding: 0 30rpx;
  background: #fff;
}
.item {
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
}
.item-name {
  margin-right: 28rpx;
  line-height: 1.4rem;
  flex-shrink: 0;
}
.item-content {
  position: relative;
  width: auto;
  flex-grow: 1;
}
.item-content input {
  width: 100%;
}
.post {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
}